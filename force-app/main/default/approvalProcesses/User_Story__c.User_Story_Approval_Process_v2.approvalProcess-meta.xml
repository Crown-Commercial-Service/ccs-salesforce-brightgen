<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>CCS_Development_Team</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>US_Sprint__c</field>
        <field>US_Business_Owner__c</field>
        <field>US_Subject__c</field>
        <field>US_MOSCOW__c</field>
        <field>US_Story_Detail__c</field>
        <field>Acceptance_Criteria__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Email_Product_Manager_Approved_NS</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Status_Approved_NS</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_User_Story_Stage_Approved_NS</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>US_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>User Story captured and refined. Business Owner to review and accept development of the User Story</description>
        <entryCriteria>
            <criteriaItems>
                <field>User_Story__c.CreatedDate</field>
                <operation>equals</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>[IN REVIEW]</label>
        <name>IN_REVIEW</name>
        <rejectionActions>
            <action>
                <name>Email_Product_Manager_Rejected_NS</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Status_Rejected_NS</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_User_Story_Stage_Rejected_NS</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Email_Deployment_Information</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Email_Developer_Approved_QA</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Status_Approved_QA</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_User_Story_Stage_Approved_QA</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>US_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>User Story developed and demonstrated to business owner</description>
        <entryCriteria>
            <criteriaItems>
                <field>User_Story__c.Stage__c</field>
                <operation>equals</operation>
                <value>User Acceptance Testing</value>
            </criteriaItems>
            <criteriaItems>
                <field>User_Story__c.US_Status__c</field>
                <operation>equals</operation>
                <value>In Testing</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>QA/UAT Approval</label>
        <name>QA_UAT_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Email_Developer_Rejected_QA</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_User_Story_Stage_Rejected_QA</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>User_Story_Approval_Rejected_QA</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Email_Developer_Delivery_Manager_Approved_Prod</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Status_Approved_Prod</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_User_Story_Stage_Approved_Prod</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>US_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>User Story has been deployed to Production and behaves as expected. Business Owner to sign off as complete</description>
        <entryCriteria>
            <criteriaItems>
                <field>User_Story__c.US_Status__c</field>
                <operation>equals</operation>
                <value>Deployed</value>
            </criteriaItems>
            <criteriaItems>
                <field>User_Story__c.Stage__c</field>
                <operation>equals</operation>
                <value>User Acceptance Testing</value>
            </criteriaItems>
        </entryCriteria>
        <label>Production Sign Off</label>
        <name>Production_Sign_Off</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Email_Developer_Delivery_Manager_Rejected_Prod</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Status_Rejected_Prod</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_User_Story_Stage_Rejected_Prod</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>US0583 - Sprint v2</description>
    <emailTemplate>SPRINT/v2_Approval_Pending_Review</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>User_Story__c.Stage__c</field>
            <operation>equals</operation>
            <value>Refinement</value>
        </criteriaItems>
        <criteriaItems>
            <field>User_Story__c.Stage__c</field>
            <operation>equals</operation>
            <value>User Acceptance Testing</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>User Story Approval Process v2</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
