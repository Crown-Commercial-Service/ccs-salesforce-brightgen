<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>CCS_Development_Team</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>APR_Status__c</field>
        <field>APR_Sprint__c</field>
        <field>APR_User_Story_ID__c</field>
        <field>APR_User_Story_Subject__c</field>
        <field>APR_Story_Detail__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>User_Story_Approved_Pending_Deployment</name>
                <type>Alert</type>
            </action>
            <action>
                <name>User_Story_QA_UAT_Complete</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>User_Story_Testing_Availability</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>APR_UAT_QA_Sign_Off__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>User Story developed, demonstrated to business owner seeking first approval</description>
        <label>Business Sign Off - UAT/QA</label>
        <name>Business_Sign_Off_UAT_QA</name>
        <rejectionActions>
            <action>
                <name>User_Story_Approval_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Post_Deployment_Approval_Request</name>
                <type>Alert</type>
            </action>
            <action>
                <name>User_Story_Deployed</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>User Story has been successfully deployed to Production</description>
        <entryCriteria>
            <criteriaItems>
                <field>User_Story_Approval__c.APR_Status__c</field>
                <operation>equals</operation>
                <value>UAT/QA Approved</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Deployed to Production</label>
        <name>Deployed_to_Production</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>User_Story_Approval_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_Complete</name>
                <type>Alert</type>
            </action>
            <action>
                <name>User_Story_Business_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>APR_Production_Sign_Off__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>User Story has been deployed to Production and behaves as expected. Business Owner to sign off complete</description>
        <label>Business Sign Off - Deployment Complete</label>
        <name>Business_Sign_Off_Deployment_Complete</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>User_Story_Approval_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>User Story Approval Process for Business Sign Off</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>User_Story_Approval__c.APR_Status__c</field>
            <operation>equals</operation>
            <value>New Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>User_Story_Approval_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>User_Story_QA_UAT_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>User_Story_UAT_Approval_Request</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>User Story Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
