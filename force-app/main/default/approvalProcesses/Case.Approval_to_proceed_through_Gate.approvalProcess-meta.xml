<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Reset_Submit_Flag</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Approval_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>ITT_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Case.ITT_Gate_Approval_Submit__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Pre-Tender Approval</label>
        <name>Pre_Tender_Approval</name>
        <rejectionActions>
            <action>
                <name>Blank_out_approval_date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Reset_Submit_Flag</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Status_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Reset_Award_approval_submit_flag</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Award_approval_date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Award_approval_status_approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Contract_Award_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Submit_Award_for_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>Approval for Awarded Contracts</label>
        <name>Approval_for_Awarded_Contracts</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Blank_out_Award_approval_date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Reset_Award_approval_submit_flag</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Award_approval_status_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Procurement_Email_Templates/Procurement_Approval_Tempate</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_Award_Approval_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approval to proceed through Gate</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
