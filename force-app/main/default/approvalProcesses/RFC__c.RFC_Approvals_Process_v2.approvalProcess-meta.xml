<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Change_Title__c</field>
        <field>System_Name__c</field>
        <field>Owner</field>
        <field>Details__c</field>
        <field>Business_Case__c</field>
        <field>Business_Risk__c</field>
        <field>Disaster_Recovery__c</field>
        <field>Rollback__c</field>
        <field>Technical_Impact__c</field>
        <field>Testing__c</field>
        <field>Updated_Documentation__c</field>
        <field>Other_Impacted_Parties__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>RFC_IA_Queue</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>RFC_Inf_Queue</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>RFC_Support_Queue</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>Business_Owner__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>RFC_SF_Team</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>RFC__c.System_Name__c</field>
                <operation>equals</operation>
                <value>SalesForce Production</value>
            </criteriaItems>
        </entryCriteria>
        <label>SF_SYSTEM</label>
        <name>SF_SYSTEM</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>unfiled$public/RFC_Request_to_Approve</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6 AND 7 AND 8</booleanFilter>
        <criteriaItems>
            <field>RFC__c.Disaster_Recovery__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>RFC__c.Technical_Impact__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>RFC__c.Testing__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>RFC__c.Updated_Documentation__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>RFC__c.Business_Case__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>RFC__c.Business_Risk__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>RFC__c.Rollback__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>RFC__c.RecordType</field>
            <operation>equals</operation>
            <value>RFC</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>RFC_approved_email_alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RFC_Status_is_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>RFC_rejected_email_alerts</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RFC_status_is_rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>RFC_Field_Update_Requested</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>RFC Approvals Process v2</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
