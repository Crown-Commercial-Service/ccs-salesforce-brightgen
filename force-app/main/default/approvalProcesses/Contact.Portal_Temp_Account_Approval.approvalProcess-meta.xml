<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>PP_Buyer_Organisation__c</field>
        <field>Email</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>PP_Approval_Complete</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PP_Contact_User_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>christian.volf@crowncommercial.gov.uk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jeanette.scott@crowncommercial.gov.uk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mark.alley@crowncommercial.gov.uk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>michael.murphy1@crowncommercial.gov.uk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sean.campbell@crowncommercial.gov.uk</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Contact.PP_Buyer_Gate_Approval_Submit__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Buyer Checks Complete</label>
        <name>Buyer_Checks_Complete</name>
        <rejectionActions>
            <action>
                <name>PP_Contact_User_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>US0580 - Securing Access to The Purchasing Platform</description>
    <emailTemplate>CCS_CRM_Email_Templates/PP_New_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Contact.AccountName</field>
            <operation>equals</operation>
            <value>Portal Temp Account Unassigned Buyer Contacts</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Portal Temp Account Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
